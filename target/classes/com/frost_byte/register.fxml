<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>





<StackPane fx:id="StackPane" fx:controller="com.frost_byte.RegisterController" prefHeight="626.0" prefWidth="367.0" stylesheets="@register.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Background (Copied from login.fxml) -->
        <Pane>
            <ImageView fitHeight="626.0" fitWidth="367.0" pickOnBounds="true" preserveRatio="false">
                <image>
                    <Image url="@../../images/backgroundcropped.png" />
                </image>
            </ImageView>
        </Pane>

        <!-- Registration Form Elements -->

         <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="626.0" prefWidth="367.0" 
                    style="-fx-background: transparent; -fx-background-color: transparent;">
        <content>
            <VBox alignment="CENTER"  prefWidth="339.0" spacing="15.0">
                <padding>
                    <Insets top="100.0" />
                </padding>
                <children>
                    <Label text="Create New Account" textFill="BLACK">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>
                    
                    <!-- Separator for spacing -->
                    <Separator visible="false" prefHeight="10.0" />

                    <!-- Username Input -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <TextField fx:id="usernameText" promptText="Username" prefWidth="250.0" />
                    </HBox>
                    
                    <!-- Email Input -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <TextField fx:id="emailText" promptText="Email" prefWidth="250.0" />
                    </HBox>

                    <!-- First Name Input -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <TextField fx:id="firstNameText" promptText="First Name" prefWidth="250.0" />
                    </HBox>
                    
                    <!-- Last Name Input -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <TextField fx:id="lastNameText" promptText="Last Name" prefWidth="250.0" />
                    </HBox>

                    <!-- Password Input -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <PasswordField fx:id="passwordText" promptText="Password" prefWidth="250.0" />
                    </HBox>
                    
                    <!-- Confirm Password Input -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <PasswordField fx:id="confirmPasswordText" promptText="Confirm Password" prefWidth="250.0" />
                    </HBox>

                    <!-- <HBox alignment="CENTER" spacing="10.0">
                        <TextField fx:id="securityQuestionText" promptText="Security Question" prefWidth="250.0" />
                    </HBox> -->
                   <!-- <ComboBox fx:id="securityQuestionCombo" prefWidth="250.0" promptText="Select a Security Question" /> -->


                    <!-- Security Question ComboBox -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <ComboBox fx:id="securityQuestionCombo" 
                                promptText="Select a Security Question"
                                prefWidth="250.0"
                                styleClass="text-field"
                                style="-fx-text-fill: white;">
                        </ComboBox>
                    </HBox>


                    <HBox alignment="CENTER" spacing="10.0">
                        <TextField fx:id="securityAnswerText" promptText="Security Answer" prefWidth="250.0" />
                    </HBox>
                    <!-- Error Label -->
                    <Label fx:id="errorLabel" textFill="#ff0000" />
                    
                    <!-- Register Button -->
                    <Button mnemonicParsing="false" onAction="#handleRegister" prefHeight="30.0" prefWidth="258.0" text="Register" styleClass="login-button">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </Button>
                    
                    <!-- Back to Login Button -->
                    <Button mnemonicParsing="false" onAction="#switchToLogin" prefHeight="30.0" prefWidth="258.0" text="Back to Login" styleClass="register-button" />

                </children>
                <padding>
                    <Insets top="50.0" bottom="50.0"/>
                </padding>

            </VBox>
        </content>
    </ScrollPane>
    </children>
</StackPane>