<StackPane fx:id="StackPane" fx:controller="com.frost_byte.LoginController" prefHeight="626.0" prefWidth="367.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <!-- Background -->
       <Pane>
           <ImageView fitHeight="626.0" fitWidth="367.0" pickOnBounds="true" preserveRatio="false">
               <image>
                   <Image url="@../../images/backgroundcropped.png" />
               </image>
           </ImageView>
       </Pane>

       <!-- UI elements -->
       <VBox prefHeight="626.0" prefWidth="339.0">
           <children>
               <HBox prefHeight="60.0" prefWidth="367.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                   </children>
               </HBox>
               <HBox prefHeight="115.0" prefWidth="367.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="99.0" />
                       <ImageView fitHeight="169.0" fitWidth="187.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../../images/playpathlogo.png" />
                           </image>
                       </ImageView>
                   </children>
               </HBox>
               <HBox prefHeight="35.0" prefWidth="367.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="22.0" prefWidth="75.0" />
