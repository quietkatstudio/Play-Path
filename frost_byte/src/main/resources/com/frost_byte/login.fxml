                       <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="43.0" text="Login" textAlignment="CENTER">
                           <font>
                               <Font size="14.0" />
                           </font>
                       </Label>
                       <Separator prefHeight="31.0" prefWidth="86.0" />
                   </children>
               </HBox>
               <HBox prefHeight="60.0" prefWidth="367.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                       <TextField fx:id="usernameText" prefHeight="34.0" prefWidth="249.0" promptText="Username" />
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                   </children>
               </HBox>
               <HBox prefHeight="51.0" prefWidth="367.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                       <PasswordField fx:id="passwordText" prefHeight="35.0" prefWidth="250.0" promptText="Password" />
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                   </children>
               </HBox>
               <HBox prefHeight="43.0" prefWidth="367.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                       <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="30.0" prefWidth="258.0" text="Login" textFill="WHITE">
                           <font>
                               <Font size="14.0" />
                           </font>
                       </Button>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="115.0" />
                   </children>
               </HBox>
               <HBox prefHeight="100.0" prefWidth="200.0">
                   <children>
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="73.0" />
                       <Button fx:id="regButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="81.0" text="Register" />
                       <Separator opacity="0.0" prefHeight="31.0" prefWidth="3.0" />
                       <Button fx:id="passButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="130.0" text="Forgot Password?" />
